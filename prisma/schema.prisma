generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Request {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  title       String
  description String
  photoUrl    String?
  resolvedBy  String?

  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@index([userId])
}

model User {
  id        String   @id @default(cuid())
  name      String   @default("Unnamed User")
  email     String   @unique
  password  String
  role      UserRole @default(CUSTOMER)   
  address  String?
  visits    Visit[]
  requests Request[]
}

model Visit {
  id        String   @id @default(cuid())
  date      DateTime
  note      String
  signedBy  String?
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  feedback  Feedback?
  photos    Photo[]
}

model Photo {
  id      String @id @default(cuid())
  url     String
  visit   Visit  @relation(fields: [visitId], references: [id])
  visitId String

  @@index([visitId])
}

model Feedback {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) // For sorting by submission time!
  text      String
  photoUrl  String?

  // This creates the one-to-one relation
  visit   Visit  @relation(fields: [visitId], references: [id])
  visitId String @unique // @unique ensures one feedback per visit
}

enum UserRole {
  CUSTOMER
  EMPLOYEE
}