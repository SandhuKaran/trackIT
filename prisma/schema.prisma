generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String   @default("Unnamed User")
  email     String   @unique
  password  String
  role      UserRole @default(CUSTOMER)   
  visits    Visit[]
}

model Visit {
  id        String   @id @default(cuid())
  date      DateTime
  note      String
  photoUrl  String?
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  feedback  Feedback?
}

model Feedback {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) // For sorting by submission time!
  text      String

  // This creates the one-to-one relation
  visit   Visit  @relation(fields: [visitId], references: [id])
  visitId String @unique // @unique ensures one feedback per visit
}

enum UserRole {
  CUSTOMER
  EMPLOYEE
}